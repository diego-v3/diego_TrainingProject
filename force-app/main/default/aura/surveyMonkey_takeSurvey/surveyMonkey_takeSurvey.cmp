<aura:component controller="takeSurvey" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:apphostable" access="global">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="surveyId" type="String" />
    <aura:attribute name="survey" type="Map" />

    <aura:attribute name="customerSurveyIsOpen" type="Boolean" default="{!false}" />
    <aura:attribute name="productReviewIsOpen" type="Boolean" default="{!false}" />


    <div class="slds-scope sm-card slds-card">
        <div class="slds-card__header slds-grid slds-m-bottom_large">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <img src="{!$Resource.surveyMonkey_logo_hz}" style="height:30px;" />
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Accounts">
                            <span class="slds-text-heading_small"></span>
                        </a>
                    </h2>
                </div>
            </header>
        </div>
        <div class="slds-card__body slds-card__body_inner">
            <div class="slds-m-bottom_medium slds-m-horizontal_large">
                <div class="slds-text-heading_medium slds-p-bottom_medium slds-border_bottom slds-p-horizontal_large">
                    {!v.survey.name}
                </div>
            </div>
            <div class="slds-p-horizontal_small">
                <div class="sm-container_responses slds-p-horizontal_small slds-scrollable_y">
                    <ul class="sm-question-list">
                        <aura:iteration items='{!v.survey.questions}' var="question">
                            <li class="sm-question-list__item slds-p-vertical_large slds-p-horizontal_x-small">
                                <!-- Question # -->
                                <h4 class="slds-text-title_caps slds-m-bottom_small">
                                    <strong>Q{!question.orderNumber}</strong>
                                </h4>
                                <!-- /Question # -->
                                <!-- Question -->
                                <h2 class="slds-text-heading_medium slds-m-bottom_medium">
                                    {!question.name}
                                </h2>
                                <!-- /Question -->
                                <!-- Response -->
                                <aura:iteration items='{!question.answers}' var="answer">
                                    <div class="slds-text-heading_small slds-m-left_medium">
                                        <div class="col">
                                            <div class="slds-form-element">
                                                <div class="slds-form-element__control">
                                                    <lightning:input type="checkbox" checked="{!answer.selected}" label="{!answer.name}"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </aura:iteration>
                                <!-- /Response -->
                            </li>
                        </aura:iteration>
                    </ul>
                </div>
                <div class="slds-text-align_right slds-m-vertical_large">
                    <lightning:button variant="brand" label="Submit" title="Brand action" onclick="{! c.submit }" />
                </div>
            </div>
        </div>
    </div>
</aura:component>